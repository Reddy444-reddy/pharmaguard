# PharmaGuard Configuration

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_WORKERS=4
API_TIMEOUT=120

# Security
ENABLE_HTTPS=True
JWT_SECRET_KEY=your-secret-key-here-change-in-production
MAX_CONTENT_LENGTH=5242880

# OpenAI/LLM Configuration (Optional)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-3.5-turbo
LLM_ENABLED=False

# Logging
LOG_FILE=audit.log
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_HOUR=50
RATE_LIMIT_ANALYZE_PER_HOUR=20

# Database (if using MongoDB for audit logs)
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=pharmaguard

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Audit & Compliance
AUDIT_LOGGING_ENABLED=True
PHI_MASKING_ENABLED=True
